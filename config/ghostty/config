## KEYBINDS

# general
keybind = cmd+shift+comma=reload_config

# quick terminal with hyperkey
keybind = global:cmd+shift+option+ctrl+t=toggle_quick_terminal
quick-terminal-position = top

# scroll back buffer
keybind = cmd+enter=text:\x02[

# tmux pane splits
keybind = cmd+d=text:\x02%
keybind = cmd+shift+d=text:\x02"

# tmux tab management
keybind = cmd+t=text:\x02c
keybind = cmd+w=text:\x02x
keybind = cmd+shift+l=text:\x02n
keybind = cmd+shift+h=text:\x02p
keybind = cmd+physical:one=text:\x021
keybind = cmd+physical:two=text:\x022
keybind = cmd+physical:three=text:\x023
keybind = cmd+physical:four=text:\x024
keybind = cmd+physical:five=text:\x025
keybind = cmd+physical:six=text:\x026
keybind = cmd+physical:seven=text:\x027
keybind = cmd+physical:eight=text:\x028
keybind = cmd+physical:nine=text:\x029

# rename window/tab
keybind = cmd+comma=text:\x02,
keybind = cmd+period=text:\x02$

# delete by word
keybind = alt+backspace=text:\x17

