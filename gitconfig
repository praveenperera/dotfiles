[commit]
  gpgsign = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[pull]
	rebase = true
[push]
  default = matching
[core]
  pager = delta
  editor = nvim
  difftool = true
  excludesfile = ~/.gitignore
[diff]
  tool = difftastic
[difftool]
  prompt = false
[difftool "difftastic"]
  cmd = difft "$LOCAL" "$REMOTE"
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[delta]
  plus-style = "syntax #012800"
  minus-style = "syntax #340001"
  features = side-by-side line-numbers decorations
  syntax-theme = Monokai Extended
  side-by-side = true
  navigate = true
[interactive]
  diffFilter = delta --color-only
[alias]
  co = checkout
  ec = config --global -e
  up = !git pull --rebase --prune $@ && git submodule update --init --recursive
  cch = !git rev-parse HEAD | tr -d '\n'
  bd = branch -D 
  rm = branch -D 
  rn = branch -m
  upstream = !git branch --set-upstream-to=origin/$(git cb)
  deploy = !git push && git push dokku master
  cb = !git branch --show-current | tr -d '\n'
  cob = checkout -b
  cms = !git add -A && git commit -S -m
  cm = !git add -A && git commit -m
  save = !git add -A && git commit -m 'SAVEPOINT'
  wip = !git add -u && git commit -m "WIP"
  undo = reset HEAD~1 --mixed
  amend = commit -a --amend --no-edit
  wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
  bclean = "!f() { git branch --merged ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
  bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
  pstg = push origin master:staging
  branch-name = "!git rev-parse --abbrev-ref HEAD"
  publish = "!git push -u origin $(git branch-name)"
  unpublish = "!git push origin :$(git branch-name)"
  unstage = reset HEAD
  dft = difftool
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  meta = 227
  frag = magenta bold
  commit = 227 bold
  old = red bold
  new = green bold
  whitespace = red reverse
[interactive]
  diffFilter = delta --color-only
[gpg]
  program = gpg
[user]
  name = Praveen Perera
  email = praveen@avencera.com
[rerere]
  enabled = true
[init]
  defaultBranch = master
[format]
  signoff = true
